    <main class="container">
      <section class="card">
        <h1>LogIn de usuario</h1>
        <form method="POST" action="/login">
          <label> Usuario: <input type="text" name="usuario" required /></label
          ><br />

          <label>
            Contraseña:
            <input type="password" name="password" required /></label
